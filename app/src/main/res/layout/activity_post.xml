<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    tools:context=".PostActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:padding="16dp"
        android:layout_height="0dp">

        <LinearLayout
            android:layout_marginLeft="16dp"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textViewPostUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Name"/>
            <TextView
                android:id="@+id/textViewPostUserEmail"
                android:text=" @username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:paddingTop="8dp"
                android:id="@+id/TextViewPostContent"
                android:layout_width="match_parent"
                android:textSize="16sp"
                android:text="this is a post."
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:padding="8dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layoutDirection="rtl"
        android:gravity="center_vertical"
        android:background="@drawable/top_buttom_border"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/TextViewPostViews"
            android:text="1002"
            android:paddingRight="8dp"
            android:paddingLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/eye"/>

        <TextView
            android:paddingRight="16dp"
            android:id="@+id/TextViewPostComments"
            android:text="23"
            android:paddingLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/comment"/>

    </LinearLayout>

    <ListView
        android:id="@+id/replay_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">

    </ListView>
    </LinearLayout>

    <ImageView
        android:id="@+id/replay"
        android:layout_margin="16dp"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="bottom|right"
        android:src="@drawable/create_icon"
        android:onClick="openDialog"
        />



</FrameLayout>
